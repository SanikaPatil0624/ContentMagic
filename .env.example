OPENAI_API_KEY=your_openai_api_key_here
PORT=3001

# MongoDB Database (Required for data persistence)
# Option 1: MongoDB Atlas (FREE - Recommended)
# Sign up at: https://www.mongodb.com/cloud/atlas/register
# Get connection string from: Clusters → Connect → Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/contentmagic?retryWrites=true&w=majority

# Option 2: Local MongoDB (if installed locally)
# MONGODB_URI=mongodb://localhost:27017/contentmagic

# OAuth Credentials (Optional - for real platform posting)
# Instagram (via Facebook)
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_CALLBACK_URL=http://localhost:3001/api/auth/instagram/callback

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

# Google (for YouTube)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Twitter
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_CALLBACK_URL=http://localhost:3001/api/auth/twitter/callback

# WhatsApp (Choose one option)
# Option 1: WhatsApp Business API (Official)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# Option 2: Twilio WhatsApp (Recommended - Easier)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
